<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.collectorconnector.edit_profile.EditViewModel" />

        <variable
            name="filepath"
            type="android.net.Uri" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="fitXY"
            android:src="@drawable/collectible_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/collectible_image" />


        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="60dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/add_collectible_btn"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="18dp">


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="false"
                android:fontFamily="casual"
                android:hint="@string/name"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_hint"
                android:textSize="32sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="casual"
                android:hint="@string/description"
                android:inputType="text"
                android:minHeight="300dp"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_hint"
                android:textSize="32sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/etCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/thin_white_border"
                android:fontFamily="casual"
                android:hint="@string/select_condition"
                android:padding="14dp"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_hint"
                android:textSize="32sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_down_24" />


            <TextView
                android:id="@+id/etSelectedTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/thin_white_border"
                android:fontFamily="casual"
                android:hint="@string/select_associated_tags"
                android:padding="14dp"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/text_color_hint"
                android:textSize="32sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_down_24" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_collectible_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/simple_border"
            android:text="Submit Collectible"
            android:textColor="@color/text_color_black"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="@{() -> viewModel.addCollectible(etName.getText().toString(), etDescription.getText().toString(), etCondition.getText().toString(), filepath)}"
            app:backgroundTint="@null"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
