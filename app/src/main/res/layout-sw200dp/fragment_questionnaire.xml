<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.collectorconnector.auth.AuthViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_submit"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="16dp">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_screen_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/text_color_black"
                            android:fontFamily="casual"
                            android:inputType="textEmailAddress"
                            android:hint="@string/screen_name"
                            android:text="@={viewModel.userInfo.screenName}"
                            android:textAlignment="center"
                            android:textColor="@color/text_color_black"
                            android:textColorHint="@color/text_color_hint"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:layout_marginTop="4dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="250dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/et_screen_name">

                            <androidx.cardview.widget.CardView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="250dp">

                                <ImageView
                                    android:id="@+id/profile_pic"
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_profile"
                                    android:contentDescription="@string/profile_image" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/tv_interests"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:padding="4dp"
                            android:text="@string/interests"
                            android:textColor="@color/text_color_black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/cardView" />

                        <TextView
                            android:id="@+id/select_tagsTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/thin_white_border"
                            android:padding="12dp"
                            android:fontFamily="casual"
                            android:hint="@string/click_to_set_your_interests"
                            android:text='@{viewModel.userInfo.interests.toString().replace("[","").replace("]","")}'
                            android:textColor="@color/text_color_black"
                            android:textColorHint="@color/text_color_hint"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/tv_interests"
                            app:drawableEndCompat="@drawable/ic_baseline_library_add_check_24" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="casual"
                        android:padding="4dp"
                        android:text="@string/location"
                        android:textColor="@color/text_color_black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/thin_white_border"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/tv_location">

                        <TextView
                            android:id="@+id/search_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:fontFamily="casual"
                            android:hint="@string/click_to_set_your_location"
                            android:text='@{viewModel.userInfo.isLocationSet ? viewModel.userInfo.city + ", " + viewModel.userInfo.state : ""}'
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:drawableRightCompat="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintTop_toBottomOf="@+id/tv_location" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/form_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/btn_set_location">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_set_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:background="@drawable/button"
                                android:text="@string/use_my_location"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:backgroundTint="@null"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="casual"
                                android:text="@string/set_your_search_distance"
                                android:textAlignment="center"
                                android:textColor="@color/text_color_black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/btn_set_location" />

                            <com.google.android.material.slider.Slider
                                android:id="@+id/slider_search_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:stepSize="10.0"
                                android:value="@{viewModel.userInfo.searchDistance}"
                                android:valueFrom="0.0"
                                android:valueTo="100.0"
                                app:layout_constraintTop_toBottomOf="@+id/textView2" />

                            <TextView
                                android:id="@+id/tv_search_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_marginBottom="30dp"
                                android:fontFamily="casual"
                                android:text='@{"Search Distance: " + viewModel.userInfo.searchDistance}'
                                android:textAlignment="center"
                                android:textColor="@color/text_color_black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/slider_search_distance" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button"
            android:fontFamily="casual"
            android:text="@string/submit_profile"
            android:onClick="@{()-> viewModel.registerWithEmailAndPw(viewModel.email, viewModel.pw)}"
            android:textColor="@color/text_color_black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>





