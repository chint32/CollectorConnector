<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thin_white_border">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:contentDescription="@string/profile_image"
        android:padding="8dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_screen_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:text="@string/screen_name"
        android:textColor="@color/text_color_black"
        android:fontFamily="casual"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/last_message"
        app:layout_constraintEnd_toEndOf="@+id/last_message"
        app:layout_constraintStart_toEndOf="@+id/profileImg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:padding="4dp"
        android:text="@string/message"
        android:textColor="@color/text_color_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/profileImg"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintStart_toEndOf="@+id/profileImg"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_name" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="@string/time"
        android:textSize="12sp"
        android:textColor="@color/text_color_black"
        app:layout_constraintBottom_toBottomOf="@+id/profileImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_screen_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
