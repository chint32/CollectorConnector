<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/thin_white_border">

                <TextView
                    android:id="@+id/tv_item_deleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:fontFamily="casual"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/collIV"
                    app:layout_constraintTop_toTopOf="@+id/collIV" />

                <ImageView
                    android:id="@+id/collIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:contentDescription="@string/collectible_image" />

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="5dp"
                    android:buttonTint="@color/pink"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/collIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="9dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:tag="not fav"
                    app:layout_constraintEnd_toEndOf="@+id/collIV"
                    app:layout_constraintTop_toTopOf="@+id/collIV"
                    tools:ignore="RtlSymmetry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>