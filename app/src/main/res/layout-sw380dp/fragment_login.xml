<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.collectorconnector.auth.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:lineSpacingExtra="2dp"
            android:text="@string/collector_nconnector"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:layout_marginTop="100dp"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/etLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/text_color_black"
            android:elevation="2dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_hint"
            android:fontFamily="casual"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:autofillHints="false" />


        <EditText
            android:id="@+id/etLoginPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/text_color_black"
            android:elevation="2dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_hint"
            android:fontFamily="casual"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/etLoginEmail"
            android:autofillHints="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="70dp"
            android:background="@drawable/button"
            android:text="@string/login"
            android:onClick="@{()->viewModel.signInWithEmailAndPw(etLoginEmail.getText().toString(), etLoginPass.getText().toString())}"
            android:textColor="@color/text_color_black"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:cornerRadius="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etLoginPass" />


        <TextView
            android:id="@+id/tvRegHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_have_an_account_register_here"
            android:padding="20dp"
            android:textColor="@color/pink"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
